<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd" default-lazy-init="true">

    <bean id="consoleEventLogger" class="com.epam.spring.core.loggers.impl.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="com.epam.spring.core.loggers.impl.FileEventLogger"
          init-method="init">
        <constructor-arg name="fileName" value="file-event-logger.log"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.epam.spring.core.loggers.impl.CacheFileEventLogger"
          destroy-method="destroy" parent="fileEventLogger">
        <constructor-arg name="cacheSize" value="2"/>
    </bean>

    <bean id="combinedEventLogger" class="com.epam.spring.core.loggers.impl.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>
</beans>

